#include <iostream>
#include <unordered_set>

using namespace std;

int sumOfSquares(int n) {
    int sum = 0;
    while (n > 0) {
        int digit = n % 10;
        sum += digit * digit;
        n /= 10;
    }
    return sum;
}

bool isHappy(int n) {
    unordered_set<int> visited;

    while (n >0 && visited.find(n) == visited.end()) {
        visited.insert(n);
        n = sumOfSquares(n);
    }

    return n == 1;
}

int main() {
    int n;
    cin >> n;

    int result = isHappy(n);

    cout << result << endl;

    return 0;
}
